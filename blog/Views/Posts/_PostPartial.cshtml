@model Core.Domain.Post

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<div class="row">
    <div class="col-xs-12">
        <label class="pull-right">
            <input asp-for="IsPublished" />
            <span class="label-body"><b>Publish</b></span>
        </label>
    </div>
</div>
<div class="row">
    <div class="col-xs-6">
        <div class="form-horizontal">
            <div class="form-group">
                <label asp-for="Url" class="control-label col-xs-2"></label>
                <div class="col-xs-10">
                    <input asp-for="Url" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Title" class="control-label col-xs-2"></label>
                <div class="col-xs-10">
                    <input asp-for="Title" class="form-control value-copy" uiactions="valuechange" data-target="meta-title" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label col-xs-2"></label>
                <div class="col-xs-10">
                    <input asp-for="Description" class="form-control value-copy" data-target="meta-description" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Author" class="control-label col-xs-2"></label>
                <div class="col-xs-10">
                    <input asp-for="Author" class="form-control value-copy" data-target="meta-author" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="CreateDate" class="control-label col-xs-2"></label>
                <div class="col-xs-10">
                    <input asp-for="CreateDate" class="form-control date-picker" type="text" asp-format="{0:MM/dd/yyyy}" />
                </div>
            </div>
        </div>
    </div>
    <div class="col-xs-6">
        <div class="form-horizontal">
            <div class="form-group">
                <label asp-for="MetaKeywords" class="control-label col-xs-3"></label>
                <div class="col-xs-9">
                    <input asp-for="MetaKeywords" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="MetaTitle" class="control-label col-xs-3"></label>
                <div class="col-xs-9">
                    <input id="meta-title" asp-for="MetaTitle" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="MetaDescription" class="control-label col-xs-3"></label>
                <div class="col-xs-9">
                    <input id="meta-description" asp-for="MetaDescription" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="MetaAuthor" class="control-label col-xs-3"></label>
                <div class="col-xs-9">
                    <input id="meta-author" asp-for="MetaAuthor" class="form-control" />
                </div>
            </div>
        </div>
    </div>
    <div class="col-xs-12">
        <div class="form-horizontal">
            <div class="form-group">
                <label asp-for="Content" class="control-label col-xs-1"></label>
                <div class="col-xs-11">
                    <textarea id="content" asp-for="Content" class="form-control" rows="30" style="resize: vertical;"></textarea>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="form-horizontal">
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </div>
</div>
